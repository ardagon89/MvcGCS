@model GCS.Models.Company

@{
    ViewData["Title"] = "Edit";
}

<ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Company</a>
        </li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>

<hr />

<div class="row">
    <div class="container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div>
                            <label asp-for="Name" class="control-label">Company Name</label>
                            <input asp-for="Name"  class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <label asp-for="Website" class="control-label">Website</label>
                            <input asp-for="Website" class="form-control" />
                            <span asp-validation-for="Website" class="text-danger"></span>

                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div>
                            <label asp-for="Email" class="control-label">Company Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <label asp-for="Phone" class="control-label">Contact Phone</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>

                        </div>
                    </div>
                </div>
            </div>
            <hr style="height: 0.5px; background: #808080;">

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div>
                            <label asp-for="Revenue_band" class="control-label">Company Revenue</label>
                            <select asp-for="Revenue_band" class="form-control" asp-items="@(new SelectList(@ViewBag.RevenueList, "Code", "Description"))"></select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <label asp-for="Type" class="control-label">Company Type</label>
                            <select asp-for="Type" class="form-control" asp-items="@(new SelectList(@ViewBag.CompTypeList, "Code", "Description"))"></select>
                        </div>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div>
                            <label asp-for="Stage" class="control-label">Company Stage</label>
                            <select asp-for="Stage" class="form-control" asp-items="@(new SelectList(@ViewBag.StageList, "Code", "Description"))"></select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <label asp-for="Employee_band" class="control-label">Company Employee</label>
                            <select asp-for="Employee_band" class="form-control" asp-items="@(new SelectList(@ViewBag.EmployeeList, "Code", "Description"))"></select>
                        </div>
                    </div>
                </div>
            </div>
            <hr style="height: 0.5px; background: #808080;">
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div>
                            <label class="control-label">Address 1</label>
                            <input asp-for="Address1" type="text" id="address1" class="form-control" autofocus="autofocus">
                            <span for="address1"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <label class="control-label">Address 2</label>
                            <input asp-for="Address2" type="text" id="address2" class="form-control" autofocus="autofocus">
                            <span for="address2"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div>
                            <label class="control-label">City</label>
                            <input asp-for="City" type="text" id="city" class="form-control" autofocus="autofocus">
                            <span for="city"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <label class="control-label">State</label>
                            <input asp-for="State" type="text" id="state" class="form-control" autofocus="autofocus">
                            <span for="state"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div>
                            <label class="control-label">Zip</label>
                            <input asp-for="Zip" type="text" id="zip" class="form-control" autofocus="autofocus">
                            <span for="zip"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <label class="control-label">Country</label>
                            <input asp-for="Country" type="text" id="country" class="form-control" autofocus="autofocus">
                            <span for="country"></span>
                        </div>
                    </div>
                </div>
            </div>
            <hr style="height: 0.5px; background: #808080;">

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index"><input type="submit" value="Cancel" class="btn btn-primary" /> </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
